# Application
NODE_ENV=development
PORT=3000

# Database (Postgres)
DATABASE_URL=postgresql://donnys:donnys@localhost:5432/donnys

# Redis (BullMQ)
REDIS_URL=redis://localhost:6379

# S3-compatible Object Storage (MinIO for local dev)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=donnys-thumbnails
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1

# Scraping Tools
YT_DLP_PATH=yt-dlp

# Scheduling
CRON_TIMEZONE=America/Chicago
CRON_SCHEDULE=0 9 * * *

# API
SWAGGER_ENABLED=true
CORS_ENABLED=true
